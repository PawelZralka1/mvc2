@{
    ViewData["Title"] = "Create person";
}

<form method = "post" asp-controller="Person" asp-action="CreateNewPerson">
    <div class="from-group">
        <label for="id">ID</label>
        <input type="number" class="from-control" id="id" placeholder="ID" name="id">
    </div>
    <div class="from-group">
        <label for="name">Name</label>
        <input type="text" class="from-control" id="name" placeholder="Name" name="name">
    </div>
    <div class="from-group">
        <label for="name">City</label>
        <input type="text" class="from-control" id="city" placeholder="City" name="city">
    </div>
    <div class="from-group">
        <label for="name">Gender</label>
        <input type="number" class="from-control" id="gender" placeholder="Gender" name="gender">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>